{% extends 'base.html.twig' %}

{% block title %}List students{% endblock %}

{% block body %}
    <h1>List students</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
        {% for student in students %}
            <tr>
                <td>{{ student.title }}</td>
                <td>{{ student.name }}</td>
                <td>{{ student.email }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No student.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
